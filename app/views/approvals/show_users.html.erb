<!DOCTYPE html>
<html>
<head>
  <title>All Users</title>
</head>
<body>
  <h1><%= @title %></h1>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Approval Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users_all.each do |user| %>
        <tr>
          <td><%= user.user_first_name %></td>
          <td><%= user.user_last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.approval_status %></td>
          <td>
            <%= button_to "Approve", approve_user_path(user), method: :patch, class: 'btn btn-success' %>
            <%= button_to "Decline", decline_user_path(user), method: :patch, class: 'btn btn-danger' %>
            <%= button_to "Admin_status", approve_admin_user_path(user), method: :patch, class: 'btn btn-success' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
</html>