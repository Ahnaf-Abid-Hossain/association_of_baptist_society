<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<div class="hero">
  <h1> Rejected Users </h1>
  <h1><%= @title %></h1>

  <table id = "links">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Approval Status</th>
        <th> Profanity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @rejected_users.each do |user| %>
        <tr>
          <td><%= user.user_first_name %></td>
          <td><%= user.user_last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.approval_status %></td>
          <td>
            <%= (check_for_profanity(user.user_first_name) || check_for_profanity(user.user_last_name) || check_for_profanity(user.email)) ? 'true' : 'false' %>
          </td>
          <td>
            <%= button_to "Approve", approve_user_path(user), method: :patch, class:"view-button", data: { confirm: 'Are you sure?' }%>
            <%= button_to "Decline", decline_user_path(user), method: :patch, class:"view-button", data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
</div>
</html>