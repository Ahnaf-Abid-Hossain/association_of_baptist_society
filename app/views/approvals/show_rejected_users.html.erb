<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
</head>
<body>
  <h1><%= @title %></h1>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Approval Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @rejected_users.each do |user| %>
        <tr>
          <td><%= user.user_first_name %></td>
          <td><%= user.user_last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.approval_status %></td>
          <td>
            <%= button_to "Approve", approve_user_path(user), method: :patch, class: "neutral-button button-group-left links-button open-popup-button", data: { toggle: "modal", target: "#popupModal", popup_text: "This is the approval confirmation message." } %>
            <%= button_to "Decline", decline_user_path(user), method: :patch, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
</html>